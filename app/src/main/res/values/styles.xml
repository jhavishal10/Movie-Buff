<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/Widget.Button</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="android:colorBackground">@color/default_window_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:textAppearance">@style/Avenir500</item>
        <item name="android:textAppearanceLarge">@style/Avenir500</item>
        <item name="android:textAppearanceMedium">@style/Avenir500</item>
        <item name="android:textAppearanceSmall">@style/Avenir500</item>
        <item name="textInputStyle">@style/Widget.TextInputStyle</item>
    </style>

    <style name="Avenir500" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/avenir500</item>
    </style>

    <style name="Widget.TextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">@font/avenir600</item>
        <item name="android:fontFamily">@font/avenir600</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:colorControlActivated">@color/star_yellow</item>
        <item name="android:colorControlNormal">#FF7BABE9</item>
        <item name="colorControlActivated">@color/star_yellow</item>
        <item name="android:colorAccent">@color/star_yellow</item>
        <item name="colorAccent">@color/star_yellow</item>
        <item name="colorControlNormal">#FF7BABE9</item>
    </style> <style name="TextAppearance.Tab" parent="TextAppearance.AppCompat">
    <item name="fontFamily">@font/avenir600</item>
    <item name="android:fontFamily">@font/avenir600</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">14sp</item>
</style>
    <style name="Widget.Tabs" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tab</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="CardView.DetailsCard">
        <item name="android:layout_marginStart">@dimen/non_toolbar_margin_start_card</item>
        <item name="android:layout_marginEnd">@dimen/non_toolbar_margin_start_card</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/default_card_corner_radius</item>
    </style>

    <style name="SubTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@font/avenir500</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>